@using ClientApiContactbookApplication.ViewModels
@model LoginViewModel

<h1 class="text-center my-4">Login</h1>

<div class="d-flex justify-content-center">
    <div class="card p-4 shadow-lg" style="width: 25rem;">
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
            <div class="text-center">
                <a asp-action="ForgotPassword" class="link-primary">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>



<style>
    .card {
        border-radius: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>