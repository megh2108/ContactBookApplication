@using ClientApiContactbookApplication.ViewModels
@model List<ContactbookViewModelSP>

@{
    int count = 1;
    int month = ViewBag.Month;


    var countries = ViewBag.Countries as List<CountryContactbookViewModel>;
    var states = ViewBag.States as List<StateContactbookViewModel>;
}
<div class="container" style="background-color: white;">

    <partial name="_ReportPartialView" />
    <!-- Contact List Table -->
    <div class="table-responsive mt-3">
        <table class="table table-striped books-table" style="font-size: smaller; text-align: center; border-color: black; border-top: black;">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th> Name</th>
                    <th>Phone Number</th>
                    @* <th>Image</th> *@
                    <th>Company</th>
                    <th>BirthDate</th>
                    <th>Gender</th>
                    <th>Country</th>
                    <th>State</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="9">No record found.</td>
                    </tr>
                }
                else
                {

                    @foreach (var contact in Model)
                    {

                        <tr>
                            <td>@count</td>
                            <td>@contact.Name</td>
                            <td>@contact.PhoneNumber</td>

                            @*  @if (contact.ImagePreview != null)
                    {
                    <td>
                    <img src="data:image/jpeg;base64,@contact.ImagePreview" alt="Contact image" width="80" height="80" style="border-radius: 50px;" />
                    </td>
                    }
                    else
                    {
                    <td>
                    <img src="@Url.Content("~/Uploads/defaultmaleimage.png")" alt="Contact image" width="80" height="80" style="border-radius: 50px;" />
                    </td>
                    } *@


                            <td>@contact.Company</td>
                            <td>@contact.BirthDate.Value.ToShortDateString()</td>
                            @if (@contact.Gender == "M")
                            {

                                <td>Male</td>
                            }
                            else
                            {
                                <td>Female</td>

                            }
                            <td>@contact.CountryName</td>
                            <td>@contact.StateName</td>
                            <td>
                                @if (contact.Favourite)
                                {
                                    <span class="mr-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill text-warning" viewBox="0 0 16 16">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                        </svg>
                                    </span>
                                }
                            </td>

                        </tr>

                        count++;
                    }
                }

            </tbody>
        </table>
    </div>
</div>

