@using ClientApiContactbookApplication.ViewModels
@model ContactbookViewModel

<h1>Delete Contact</h1>
<div>
    <h4>Are you sure want to delete this contact.</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
          <dt class="col-sm-2">
            Contact Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
          <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Model.Company
        </dd>

    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ContactId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="ShowAllContactWithPagination" class="btn btn-info">Back to list</a>
        </div>

    </form>
</div>