    <h4>Contact Number : @Model.PhoneNumber</h4>
    <h4>Company : @Model.Company</h4>
    <h4>Iamge : </h4><img src="@Url.Content("~/Uploads/"+@Model.FileName)" alt="Contact image" width="550" height="550" />

</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ContactId">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ContactId">Delete</a>
